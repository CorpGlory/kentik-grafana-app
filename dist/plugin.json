{
  "type": "app",
  "name": "Kentik App",
  "id": "kentik-app",

  "staticRoot": ".",

  "routes": [
    {
      "path": "api/v4/*",
      "method": "*",
      "url": "https://api.kentik.com/api/v4/",
      "headers": [
        {"name": "X-CH-Auth-API-Token", "content": "{{.SecureJsonData.token}}"},
        {"name": "X-CH-Auth-Email", "content": "{{.JsonData.email}}"}
      ]
    },
    {
      "path": "api/v1/*",
      "method": "*",
      "url": "https://cloudhelix.com/api/v1",
      "headers": [
        {"name": "X-CH-Auth-API-Token", "content": "{{.SecureJsonData.token}}"},
        {"name": "X-CH-Auth-Email", "content": "{{.JsonData.email}}"}
      ]
    }
  ],

  "info": {
    "description": "Kentik Connect Lite allows you to quickly and easily add network activity visibility metrics to your Grafana dashboard.",
    "author": {
      "name": "Kentik.",
      "url": "http://kentik.com"
    },
    "keywords": ["kentik"],
    "logos": {
      "small": "src/img/logo_small.png",
      "large": "src/img/logo_large.png"
    },
    "links": [
      {"name": "Kentik", "url": "http://www.kentik.com"},
      {"name": "License & Terms", "url": "http://license.com"}
    ],
    "version": "1.0.0",
    "updated": "2015-02-10"
  },

  "includes": [
    {
      "type": "page",
      "name": "Device List",
      "component": "DeviceListCtrl",
      "role": "Editor",
      "addToNav": true
    },
    {
      "type": "page",
      "name": "Device Details",
      "component": "DeviceDetailsCtrl",
      "role": "Editor",
      "addToNav": false
    },
    {
      "type": "page",
      "name": "Add Device",
      "component": "AddDeviceCtrl",
      "role": "Editor",
      "addToNav": true
    },
    {
      "type": "dashboard",
      "name": "Top Talkers",
      "path": "dashboards/top_talkers.json",
      "addToNav": true
    },
    {
      "type": "dashboard",
      "name": "Kentik Home",
      "path": "dashboards/kentik-home.json",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "panel",
      "name": "Kentik Call To Action"
    },
    {
      "type": "panel",
      "name": "Kentik Device List"
    },
    {
      "type": "datasource",
      "name": "Kentik-ds"
    }
  ],

  "dependencies": {
    "grafanaVersion": "3.x.x"
  }
}
